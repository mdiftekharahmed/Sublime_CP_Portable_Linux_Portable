lli bin_exp_raw(lli base_val, lli power_val){
	lli res = 1;
	while(power_val){
		if(power_val%2){
			res *= base_val;
			power_val--;
		}
		else{
			base_val  *= base_val;
			power_val /=2;
		}
	}
	return res;
}
]]></content>
